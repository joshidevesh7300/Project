pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                // Build the image. 
                // We tag it ':latest' so we can refer to it easily in the next step.
                sh 'docker build -t my-app:latest .'
            }
        }

        stage('Test') {
            steps {
                // Run the container to execute tests, then remove it immediately (--rm).
                // This keeps the test environment identical to production.
                sh 'docker run --rm my-app:latest python -m unittest' 
            }
        }
    }

    // The 'post' block runs automatically at the end, regardless of success or failure.
    post {
        always {
            echo 'Cleaning up resources...'
            // Delete the image to save disk space on your Jenkins agent.
            // '|| true' ensures the pipeline doesn't crash if the image is already gone.
            sh 'docker rmi my-app:latest || true'
        }
        success {
            echo 'Great success! The build passed.'
        }
        failure {
            echo 'Build failed. Check logs.'
        }
    }
}
